{{- 'product-params.css' | asset_url | stylesheet_tag -}}

<div class="row">
  <div class="product-params-container columns {% if section.settings.custom_style == 'style2' %} custom_style2 {% endif %}">
    {% if section.settings.title != blank %}
      <div class="product-params-title {{ section.settings.title_size }}">{{ section.settings.title }}</div>
    {% endif %}

    <div class="product-params">
      <div class="product-params-table-wrapper">
        <table class="product-params-table">
          <thead>
            <tr>
              <th class="param-header-name">{{ section.settings.param_title }}</th>
              {% for i in (1..6) %}
                {% assign column_enabled = 'show_col' | append: i %}
                {% assign column_title = 'col' | append: i | append: '_title' %}
                {% if section.settings[column_enabled] %}
                  <th class="param-header-value">{{ section.settings[column_title] }}</th>
                {% endif %}
              {% endfor %}
            </tr>
          </thead>
          <tbody>
            {% assign current_group = '' %}
            {% assign group_rows = 0 %}
            {% assign in_group = false %}

            {% for block in section.blocks %}
              {% if block.type == 'parameter' %}
                {% assign block_group = block.settings.group_id %}

                {% if block_group != blank and block_group == current_group %}
                  {% if group_rows == 1 %}
                    <tr class="group-first-row">
                      <td rowspan="{{ group_size }}" class="group-cell">{{ group_name }}</td>
                      {% for i in (1..6) %}
                        {% assign column_enabled = 'show_col' | append: i %}
                        {% assign column_value = 'col' | append: i | append: '_value' %}
                        {% assign column_title = 'col' | append: i | append: '_title' %}
                        {% if section.settings[column_enabled] %}
                          <td data-label="{{ section.settings[column_title] }}">
                            {{ previous_block.settings[column_value] }}
                          </td>
                        {% endif %}
                      {% endfor %}
                    </tr>
                  {% endif %}
                  <tr class="group-row">
                    {% for i in (1..6) %}
                      {% assign column_enabled = 'show_col' | append: i %}
                      {% assign column_value = 'col' | append: i | append: '_value' %}
                      {% assign column_title = 'col' | append: i | append: '_title' %}
                      {% if section.settings[column_enabled] %}
                        <td data-label="{{ section.settings[column_title] }}">{{ block.settings[column_value] }}</td>
                      {% endif %}
                    {% endfor %}
                  </tr>
                  {% assign group_rows = group_rows | plus: 1 %}
                {% else %}
                  {% if block_group != blank and block_group != current_group %}
                    {% assign current_group = block_group %}
                    {% assign group_name = block.settings.param_name %}
                    {% assign group_rows = 1 %}
                    {% assign group_size = 1 %}
                    {% assign previous_block = block %}

                    {% for check_block in section.blocks %}
                      {% if check_block.type == 'parameter' and check_block.settings.group_id == current_group %}
                        {% assign group_size = group_size | plus: 1 %}
                      {% endif %}
                    {% endfor %}
                    {% assign group_size = group_size | minus: 1 %}
                  {% else %}
                    <tr class="param-row">
                      <td class="param-name">{{ block.settings.param_name }}</td>
                      {% for i in (1..6) %}
                        {% assign column_enabled = 'show_col' | append: i %}
                        {% assign column_value = 'col' | append: i | append: '_value' %}
                        {% assign column_title = 'col' | append: i | append: '_title' %}
                        {% if section.settings[column_enabled] %}
                          <td class="param-value" data-label="{{ section.settings[column_title] }}">
                            {{ block.settings[column_value] }}
                          </td>
                        {% endif %}
                      {% endfor %}
                    </tr>
                  {% endif %}
                {% endif %}
              {% elsif block.type == 'merged_row' %}
                <tr class="merged-row">
                  <td class="param-name">{{ block.settings.param_name }}</td>
                  {% assign colspan = 0 %}
                  {% for i in (1..6) %}
                    {% assign column_enabled = 'show_col' | append: i %}
                    {% if section.settings[column_enabled] %}
                      {% assign colspan = colspan | plus: 1 %}
                    {% endif %}
                  {% endfor %}
                  {% if colspan > 0 %}
                    <td colspan="{{ colspan }}" class="merged-cell">{{ block.settings.merged_value }}</td>
                  {% endif %}
                </tr>
              {% elsif block.type == 'merged_column' %}
                <tr class="header-row">
                  {% assign colspan = 1 %}
                  {% for i in (1..6) %}
                    {% assign column_enabled = 'show_col' | append: i %}
                    {% if section.settings[column_enabled] %}
                      {% assign colspan = colspan | plus: 1 %}
                    {% endif %}
                  {% endfor %}
                  <td colspan="{{ colspan }}" class="merged-cell full-width">{{ block.settings.merged_value }}</td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
        {% if section.settings.tip != blank %}
          <div class="product-params-tip">{{ section.settings.tip }}</div>
        {% endif %}
      </div>

      {% if section.settings.download_url != blank %}
        <div class="download-button-container">
          <a href="{{ section.settings.download_url }}" class="download-button" target="_blank" download>
            <span class="download-icon">{% render 'icon-download' %}</span>
            {{ section.settings.download_text | default: 'Download AI TDS' }}
          </a>
        </div>
      {% endif %}
      {% if section.blocks.size > 0 %}
        {% assign button_blocks = section.blocks | where: "type", "button" %}
        {% if button_blocks.size > 0 %}
          <div class="buttons-flex">
            {% for block in button_blocks %}
              <a href="{{ block.settings.button_link }}" class="custom-button style-{{ block.settings.button_style }}">
                {{ block.settings.button_text }}
              </a>
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}

    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // No need to add data-label - now added directly in the template

    // Check if on mobile and add mobile class to container if width is less than 768px
    {% comment %} function checkMobile() {
      const paramContainer = document.querySelector('.product-params');
      if (paramContainer) {
        if (window.innerWidth < 768) {
          paramContainer.classList.add('mobile-view');
        } else {
          paramContainer.classList.remove('mobile-view');
        }
      }
    } {% endcomment %}

    // Run on load and on resize
    {% comment %} checkMobile(); {% endcomment %}
    {% comment %} window.addEventListener('resize', checkMobile); {% endcomment %}
  });
</script>

