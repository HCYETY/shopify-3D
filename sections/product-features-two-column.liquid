{{- 'product-features-two-column.css' | asset_url | stylesheet_tag -}}

<div class="row">
  <div class="product-features-two-column-container" 
           style="--section-width: {{ section.settings.section_width }}px; --section-padding: {{ section.settings.section_padding }}px; --group-gap: {{ section.settings.group_gap }}px; --margin-bottom-desktop: {{ section.settings.margin_bottom_desktop }}px; --margin-bottom-mobile: {{ section.settings.margin_bottom_mobile }}px; --background-color: {{ section.settings.background_color }}; --background-opacity: {{ section.settings.background_opacity | divided_by: 100.0 }};">
    {% render 'section-header', section_heading: section.settings.title %}

    <div class="product-features-two-column-grid">  
      {% for block in section.blocks %}
        {% if block.type == 'feature_item' %}
          <div class="product-features-two-column-item 
            {% if block.settings.layout_mode == 'horizontal' %}layout-horizontal{% else %}layout-vertical{% endif %}
            {% if block.settings.layout_direction == 'text_first' %}text-first{% else %}image-first{% endif %}"
            style="--content-gap: {{ block.settings.content_gap }}px; --text-alignment: {{ block.settings.text_alignment }}; --image-alignment: {{ block.settings.image_alignment }}; --image-border-radius: {{ block.settings.image_border_radius }}px; --text-position: {{ block.settings.text_position }};"
            {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <div class="feature-image-container">
                {%- render 'responsive-image', 
                image: block.settings.image,
                sizes: '375x, 500x, 768x, 1200x',
                class: 'feature-image',
                priority: true
                -%}
              </div>
            {% else %}
              <div class="feature-image-container">
                {{ 'image' | placeholder_svg_tag: 'feature-image placeholder' }}
              </div>
            {% endif %}
            
            <div class="feature-content">
              {% if block.settings.title != blank %}
                <h3 class="feature-title">{{- block.settings.title -}}</h3>
              {% endif %}
              
              {% if block.settings.description != blank %}
                <div class="feature-description">{{- block.settings.description -}}</div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "产品特性两列布局",
  "class": "product-features-two-column-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "区块标题",
      "default": "产品特性"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "整体宽度",
      "options": [
        {
          "value": "1170",
          "label": "1170px"
        },
        {
          "value": "1370",
          "label": "1370px"
        },
        {
          "value": "1470",
          "label": "1470px"
        },
        {
          "value": "1570",
          "label": "1570px"
        },
        {
          "value": "1770",
          "label": "1770px"
        }
      ],
      "default": "1370"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 20,
      "label": "整体左右边距 (px)"
    },
    {
      "type": "range",
      "id": "group_gap",
      "min": 0,
      "max": 120,
      "step": 10,
      "default": 0,
      "label": "组与组之间的间距 (px)"
    },
    {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "label": "桌面端下边距 (px)"
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 40,
      "label": "移动端下边距 (px)"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "background_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 100,
      "label": "背景透明度 (%)"
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "特性项",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "特性图片"
        },
        {
          "type": "text",
          "id": "title",
          "label": "特性标题"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "特性描述"
        },
        {
          "type": "select",
          "id": "layout_mode",
          "label": "布局模式",
          "options": [
            {
              "value": "horizontal",
              "label": "horizontal"
            },
            {
              "value": "vertical",
              "label": "vertical"
            }
          ],
          "default": "horizontal"
        },
        {
          "type": "select",
          "id": "layout_direction",
          "label": "布局方向",
          "options": [
            {
              "value": "image_first",
              "label": "正常"
            },
            {
              "value": "text_first",
              "label": "反转"
            }
          ],
          "default": "image_first"
        },
        {
          "type": "range",
          "id": "content_gap",
          "min": 20,
          "max": 100,
          "step": 5,
          "default": 60,
          "label": "图片与文字间距 (px)"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "文字对齐方式",
          "options": [
            {
              "value": "left",
              "label": "左对齐"
            },
            {
              "value": "center",
              "label": "居中对齐"
            },
            {
              "value": "right",
              "label": "右对齐"
            }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "文字位置",
          "options": [
            {
              "value": "left",
              "label": "左"
            },
            {
              "value": "center",
              "label": "中"
            },
            {
              "value": "right",
              "label": "右"
            }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "image_alignment",
          "label": "图片对齐方式",
          "options": [
            {
              "value": "left",
              "label": "左对齐"
            },
            {
              "value": "center",
              "label": "居中对齐"
            },
            {
              "value": "right",
              "label": "右对齐"
            }
          ],
          "default": "center"
        },
        {
          "type": "range",
          "id": "image_border_radius",
          "min": 0,
          "max": 50,
          "step": 2,
          "default": 8,
          "label": "图片圆角 (px)"
        },

      ]
    }
  ],
  "presets": [
    {
      "name": "产品特性两列布局",
      "blocks": [
        {
          "type": "feature_item",
          "settings": {
            "title": "Universal Printer Compatibility",
            "description": "Whether you're working with the HALOT-01 or another Creality 3D printer, this resin integrates seamlessly into your setup. It's also available in multiple colors, making it easy to match your creative vision or production needs."
          }
        },
        {
          "type": "feature_item",
          "settings": {
            "title": "Smooth Flow, Clean Release",
            "description": "With optimized fluidity and low viscosity, the resin flows easily into fine details and cures efficiently, improving print success rates and reducing adhesion to the FEP film — for smoother printing and easier model removal."
          }
        }
      ]
    }
  ]
}
{% endschema %}
