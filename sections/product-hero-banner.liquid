{{- 'product-hero-banner.css' | asset_url | stylesheet_tag -}}

<div class="product-hero-banner-container" style="--background-color: {{ section.settings.background_color }}; --section-padding: {{ section.settings.section_padding }}px;">
  <div class="product-hero-banner-content">
    <!-- 上方大图片区域 -->
    {% if section.settings.main_image != blank or section.settings.mobile_main_image != blank %}
      <div class="product-hero-banner-main-image-wrapper">
        {% if section.settings.main_image != blank %}
          <!-- PC端主图片 -->
          <div class="product-hero-banner-main-image-desktop">
            {%- render 'responsive-image', 
            image: section.settings.main_image,
            sizes: '1200x, 800x, 600x',
            class: 'product-hero-banner-main-image',
            priority: true
            -%}
          </div>
        {% endif %}
        
        {% if section.settings.mobile_main_image != blank %}
          <!-- 移动端主图片 -->
          <div class="product-hero-banner-main-image-mobile">
            {%- render 'responsive-image', 
            image: section.settings.mobile_main_image,
            sizes: '800x, 600x, 400x',
            class: 'product-hero-banner-main-image',
            priority: true
            -%}
          </div>
        {% endif %}
        
        {% if section.settings.main_image == blank and section.settings.mobile_main_image == blank %}
          <div class="product-hero-banner-main-image-placeholder">
            {{ 'image' | placeholder_svg_tag: 'product-hero-banner-main-image placeholder' }}
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="product-hero-banner-main-image-wrapper">
        {{ 'image' | placeholder_svg_tag: 'product-hero-banner-main-image placeholder' }}
      </div>
    {% endif %}

    <!-- 下方小图片和标题区域 -->
    <div class="product-hero-banner-bottom-section">
      <div class="product-hero-banner-bottom-content">
        <!-- 小图片 -->
        {% if section.settings.bottom_image != blank or section.settings.mobile_bottom_image != blank %}
          <div class="product-hero-banner-bottom-image-wrapper">
            {% if section.settings.bottom_image != blank %}
              <!-- PC端底部图片 -->
              <div class="product-hero-banner-bottom-image-desktop">
                {%- render 'responsive-image', 
                image: section.settings.bottom_image,
                sizes: '400x, 300x, 200x',
                class: 'product-hero-banner-bottom-image',
                priority: false
                -%}
              </div>
            {% endif %}
            
            {% if section.settings.mobile_bottom_image != blank %}
              <!-- 移动端底部图片 -->
              <div class="product-hero-banner-bottom-image-mobile">
                {%- render 'responsive-image', 
                image: section.settings.mobile_bottom_image,
                sizes: '300x, 200x, 150x',
                class: 'product-hero-banner-bottom-image',
                priority: false
                -%}
              </div>
            {% endif %}
            
            {% if section.settings.bottom_image == blank and section.settings.mobile_bottom_image == blank %}
              <div class="product-hero-banner-bottom-image-placeholder">
                {{ 'image' | placeholder_svg_tag: 'product-hero-banner-bottom-image placeholder' }}
              </div>
            {% endif %}
          </div>
        {% else %}
          <div class="product-hero-banner-bottom-image-wrapper">
            {{ 'image' | placeholder_svg_tag: 'product-hero-banner-bottom-image placeholder' }}
          </div>
        {% endif %}

        <!-- 标题区域 -->
        <div class="product-hero-banner-text-content">
          {% if section.settings.main_title != blank %}
            <h1 class="product-hero-banner-main-title">{{ section.settings.main_title }}</h1>
          {% endif %}
          
          {% if section.settings.sub_title != blank %}
            <h2 class="product-hero-banner-sub-title">{{ section.settings.sub_title }}</h2>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "产品横幅",
  "class": "product-hero-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "PC端主图片（大图）"
    },
    {
      "type": "image_picker",
      "id": "mobile_main_image",
      "label": "移动端主图片（大图）"
    },
    {
      "type": "image_picker",
      "id": "bottom_image",
      "label": "PC端底部小图片"
    },
    {
      "type": "image_picker",
      "id": "mobile_bottom_image",
      "label": "移动端底部小图片"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "主标题",
      "default": "16K Standard Resin"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "副标题",
      "default": "Standard Resin Sea Mist Gray & Standard Resin Sunset Red"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0,
      "label": "内边距"
    }
  ],
  "presets": [
    {
      "name": "产品横幅",
      "settings": {
        "main_title": "16K Standard Resin",
        "sub_title": "Standard Resin Sea Mist Gray & Standard Resin Sunset Red"
      }
    }
  ]
}
{% endschema %}
