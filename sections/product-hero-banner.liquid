{{- 'product-hero-banner.css' | asset_url | stylesheet_tag -}}

<div class="product-hero-banner-container" style="--background-color: {{ section.settings.background_color }}; --section-padding: {{ section.settings.section_padding }}px;">
  <div class="product-hero-banner-content">
    <!-- 主图片区域 -->
    {% if section.settings.main_image != blank or section.settings.mobile_main_image != blank %}
      <div class="product-hero-banner-image-wrapper">
        {% if section.settings.main_image != blank %}
          <!-- PC端图片 -->
          <div class="product-hero-banner-image product-hero-banner-image--desktop">
            {%- render 'responsive-image', 
            image: section.settings.main_image,
            sizes: '1200x, 800x, 600x',
            class: 'product-hero-banner-image__img',
            priority: true
            -%}
          </div>
        {% endif %}
        
        {% if section.settings.mobile_main_image != blank %}
          <!-- 移动端图片 -->
          <div class="product-hero-banner-image product-hero-banner-image--mobile">
            {%- render 'responsive-image', 
            image: section.settings.mobile_main_image,
            sizes: '800x, 600x, 400x',
            class: 'product-hero-banner-image__img',
            priority: true
            -%}
          </div>
        {% endif %}

        {% if section.settings.main_image == blank and section.settings.mobile_main_image == blank %}
          <!-- 占位图片 -->
          <div class="product-hero-banner-image product-hero-banner-image--placeholder">
            {{ 'image' | placeholder_svg_tag: 'product-hero-banner-image__img placeholder' }}
          </div>
        {% endif %}
      </div>
    {% else %}
      <!-- 默认占位图片 -->
      <div class="product-hero-banner-image-wrapper">
        <div class="product-hero-banner-image product-hero-banner-image--placeholder">
          {{ 'image' | placeholder_svg_tag: 'product-hero-banner-image__img placeholder' }}
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "产品横幅",
  "class": "product-hero-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "PC端图片"
    },
    {
      "type": "image_picker",
      "id": "mobile_main_image",
      "label": "移动端图片"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景颜色",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "label": "内边距"
    }
  ],
  "presets": [
    {
      "name": "产品横幅"
    }
  ]
}
{% endschema %}
