<a class="thb-secondary-item" href="{{ routes.cart_url }}" id="cart-drawer-toggle">
  <div class="thb-secondary-item-icon">
    {% render 'svg-icons' with 'cart' %}
    <span class="thb-item-count" style="background-color: #3F72E5;">
      {%- if cart.item_count > 99 -%}
        {%- render 'svg-icons' with 'thb-asterisk' -%}
      {%- else -%}
        {{ cart.item_count }}
      {%- endif -%}
    </span>
  </div>
</a>
