{% style %}
  #{{ block.id }} {
    /* 定义标题和副标题的颜色变量 */
    --title-color: {{ block.settings.title_color }}; /* 标题颜色变量 */
    --desc-color: {{ block.settings.desc_color }}; /* 描述文字颜色变量 */
  }

  .h-banner-card-medium.swiper-slide {
    position: relative;
    height: 410px;
    max-width: 1200px;
  }

  .h-banner-card-medium img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 16px;
  }

  .h-banner-card-medium .abs-wrap {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
  }

  .h-banner-card-medium a:hover {
    color: #1e1e1e;
    text-decoration: none;
  }

  .h-banner-card-medium .content-wrap {
    padding-left: 120px;
  }

  .h-banner-card-medium .content {
    position: relative;
    margin: auto 0;
    width: 446px;
  }

  .h-banner-card-medium .content .title {
    color: var(--title-color);
    font-family: Montserrat;
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
    margin-bottom: 12px;
  }

  .h-banner-card-medium .content .desc {
    color: var(--desc-color);
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    margin-bottom: 20px;
  }

  .h-banner-card-medium .content .btn-wrap {
    display: flex;
    gap: 16px;
  }

  .h-banner-card-medium .content .btn {
    display: flex;
    width: fit-content;
    height: 48px;
    padding: 8px 24px;
    justify-content: center;
    align-items: center;
    border-radius: 44px;
    background-color: #1e1e1e;
    color: #fff;
    text-align: center;
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 150%;
  }

  .h-banner-card-medium .content .compare-btn {
    background-color: transparent;
    color: #1e1e1e;
    border: 2px solid #1e1e1e;
  }

  .h-banner-card-medium .content .compare-btn svg {
    display: none;
  }

  .h-banner-card-medium .content .btn:hover {
    opacity: 0.8;
  }

  .h-banner-card-medium .mobile-img {
    display: none;
  }

  @media (max-width: 900px) {
    #{{ block.id }} {
      --title-color: {{ block.settings.title_color_mobile }};
      --desc-color: {{ block.settings.desc_color_mobile }};
    }
    .h-banner-card-medium.swiper-slide {
      height: 130.667vw; /* 130.667vw = 490px */
    }

    .h-banner-card-medium .pc-img {
      display: none;
    }
    .h-banner-card-medium .mobile-img {
      display: block;
    }
    .h-banner-card-medium .content-wrap {
      padding: 8.533vw 5.333vw 0;
    }
    .h-banner-card-medium .content {
      margin-top: 0;
      width: 100%;
    }
    .h-banner-card-medium .content .title {
      font-size: 5.333vw;
      text-align: center;
      margin-bottom: 2.133vw;
    }
    .h-banner-card-medium .content .desc {
      font-size: 3.733vw;
      text-align: center;
      margin-bottom: 3.2vw;
    }
    .h-banner-card-medium .content .btn-wrap {
      gap: 5.333vw;
      justify-content: center;
    }
    .h-banner-card-medium .content .compare-btn {
      border: none;
    }
    .h-banner-card-medium .content .compare-btn svg {
      display: inline-block;
      fill: none;
      stroke: #1e1e1e;
      margin-left: 2.133vw;
    }
    .h-banner-card-medium .content .btn-wrap .compare-btn {
      padding-left: 0;
      padding-right: 0;
    }
    .h-banner-card-medium .content .btn {
      height: 8.533vw;
      padding: 2.133vw 4.267vw;
      font-size: 3.733vw;
    }
  }

  @media (min-width: 1920px) {
    .h-banner-card-medium.swiper-slide {
      height: 21.354vw;
      max-width: 62.5vw;
    }
    .h-banner-card-medium img {
      border-radius: 0.833vw;
    }
    .h-banner-card-medium .content-wrap {
      padding-left: 6.25vw;
    }
    .h-banner-card-medium .content {
      width: 23.229vw;
    }
    .h-banner-card-medium .content .title {
      font-size: 1.667vw;
      margin-bottom: 0.625vw;
    }
    .h-banner-card-medium .content .desc {
      font-size: 0.833vw;
      margin-bottom: 1.042vw;
    }

    .h-banner-card-medium .content .btn-wrap {
      gap: 0.833vw;
    }
    .h-banner-card-medium .content .compare-btn {
      border: 0.104vw solid #1e1e1e;
    }
    .h-banner-card-medium .content .btn {
      height: 2.5vw;
      padding: 0.417vw 1.25vw;
      border-radius: 2.292vw;
      font-size: 0.833vw;
    }
  }
{% endstyle %}

<div id="{{ block.id }}" class="swiper-slide h-banner-card-medium">
  <img
    alt="{{ block.settings.title }}"
    decoding="async"
    loading="lazy"
    class="pc-img"
    src="{{ block.settings.image | img_url: 'master' }}"
    width="100%"
    height="100%"
  >
  <img
    alt="{{ block.settings.title }}"
    decoding="async"
    loading="lazy"
    class="mobile-img"
    src="{{ block.settings.image_mobile | img_url: 'master' }}"
    width="100%"
    height="100%"
  >
  <div class="abs-wrap content-wrap">
    <div class="content">
      <p class="title">{{ block.settings.title }}</p>
      <p class="desc">{{ block.settings.desc }}</p>
      <div class="btn-wrap">
        {% if block.settings.btn_text != blank %}
        <a href="{{ block.settings.link }}" class="btn">{{ block.settings.btn_text }}</a>
          {% endif %}
        {% if block.settings.show_compare_btn %}
          <a href="{{ block.settings.compare_link }}" class="btn compare-btn">
            {{- block.settings.compare_btn_text }}
            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="20" viewBox="0 0 21 20" fill="none">
              <path d="M7.5835 3.33337L14.2502 10L7.5835 16.6667" stroke="#1E1E1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

