{% style %}
  .swiper-slide.h-blog-card {
    width: 390px;
    height: 400px;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }
  
  /* 确保滑块容器正确显示 */
  .swiper-wrapper {
    display: flex;
    align-items: center;
  }
  
  /* 优化滚动体验 */
  .swiper-slide.h-blog-card:hover {
    transform: translateY(-5px);
  }

  .h-blog-card a {
    display: block;
    width: 100%;
    height: 100%;
  }

  .h-blog-card .bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    user-select: none;
  }

  .h-blog-card:hover .bg-image {
    transform: scale(1.05);
  }

  /* 移动端和PC端图片显示控制 */
  .h-blog-card .mobile-img {
    display: none;
  }

  .h-blog-card .pc-img {
    display: block;
  }

  /* 移动端和PC端图片显示控制 */
  .h-blog-card .mobile-img {
    display: none;
  }

  .h-blog-card .pc-img {
    display: block;
  }

  .h-blog-card .title-block-container {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 10%);
    width: 100%;
    padding: 24px;
    // background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
    // backdrop-filter: blur(8px);
    // -webkit-backdrop-filter: blur(8px);
    text-align: center;
    background: linear-gradient(0deg, #000000 0%, rgba(0, 0, 0, 0) 100%);
  }
  .h-blog-card .title-block {
    width: 70%;
    margin: auto;
  }

  .h-blog-card .main-title {
    color: #ffffff;
    font-family: Montserrat;
    font-size: 24px;
    margin-bottom: 8px;
    line-height: 1.2;
    font-weight: 700;
  }

  .h-blog-card .sub-title {
    color: #f5f6f7;
    font-family: Montserrat;
    font-size: 16px;
    line-height: 1.5;
    font-weight: 400;
  }

  @media (max-width: 900px) {
    /* .swiper-slide .h-blog-card {
      width: 260px;
      height: 370px;
    }

    .h-blog-card .title-block-container {
      padding: 20px;
    }

    .h-blog-card .main-title {
      font-size: 20px;
    }

    .h-blog-card .sub-title {
      font-size: 12px;
    } */
    .swiper-slide .h-blog-card {
      width: 69.333vw;
      height: 98.667vw;
    }
    .h-blog-card .title-block-container {
      padding: 5.333vw;
    }
    .h-blog-card .main-title {
      font-size: 5.333vw;
    }
    .h-blog-card .sub-title {
      font-size: 3.2vw;
    }
    .swiper-slide.h-blog-card {
      width: 375px;
      height: 665px;
    }
    
    /* 移动端图片显示，PC端图片隐藏 */
    .h-blog-card .mobile-img {
      display: block;
    }
    
    .h-blog-card .pc-img {
      display: none;
    }
    
    /* 移动端图片显示，PC端图片隐藏 */
    .h-blog-card .mobile-img {
      display: block;
    }
    
    .h-blog-card .pc-img {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    .swiper-slide.h-blog-card {
      width: 970px;
      height: 540px;
    }
    .h-blog-card .title-block-container {
      padding: 24px;
    }
    .h-blog-card .main-title {
      font-size: 24px;
      margin-bottom: 8px;
    }
    .h-blog-card .sub-title {
      font-size: 16px;
    }
  }

  @media (min-width: 1920px) {
    .swiper-slide.h-blog-card {
      width: 970px;
      height: 540px;
    }
    .h-blog-card .title-block-container {
      padding: 24px;
    }
    .h-blog-card .main-title {
      font-size: 24px;
      margin-bottom: 8px;
    }
    .h-blog-card .sub-title {
      font-size: 16px;
    }
  }
{% endstyle %}

<div class="swiper-slide h-blog-card ">
  <a href="{{ block.settings.link }}">
    {% if block.settings.image != blank %}
      <!-- PC端图片 -->
      <img
        class="bg-image pc-img"
        src="{{ block.settings.image | img_url: 'master' }}"
        alt="{{ block.settings.title }}"
        loading="lazy"
        width="100%"
        height="100%"
      >
    {% endif %}
    
    {% if block.settings.mobile_image != blank %}
      <!-- 移动端图片 -->
      <img
        class="bg-image mobile-img"
        src="{{ block.settings.mobile_image | img_url: 'master' }}"
        alt="{{ block.settings.title }}"
        loading="lazy"
        width="100%"
        height="100%"
      >
    {% endif %}
    
    {% if block.settings.image == blank and block.settings.mobile_image == blank %}
      <!-- 占位符图片 -->
      <img
        class="bg-image pc-img"
        src="{{ 'image' | placeholder_svg_tag }}"
        alt="Placeholder Image"
        loading="lazy"
        width="100%"
        height="100%"
      >
    {% endif %}
    
    <div class="title-block-container">
      <div class="title-block">
        <h3 class="main-title">{{ block.settings.title }}</h3>
        <p class="sub-title">{{ block.settings.sub_title }}</p>
      </div>
    </div>
  </a>
</div>

{% schema %}
{
  "name": "博客或其他卡片",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "PC端背景图片"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "移动端背景图片"
    },
    {
      "type": "text",
      "id": "title",
      "label": "主标题",
      "default": "title"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "副标题",
      "default": "sub title"
    },
    {
      "type": "url",
      "id": "link",
      "label": "链接地址"
    }
  ],
  "presets": [
    {
      "name": "博客或其他卡片"
    },
    {
      "name": "blog card or other"
    }
  ]
}
{% endschema %}
