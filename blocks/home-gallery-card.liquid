{% style %}
  .home-gallery-card {
    width: 320px;
    height: 229px;
    border-radius: 16px;
    overflow: hidden;
    display: block;
  }
  .home-gallery-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease-in-out;
  }
  .home-gallery-card:hover img {
    transform: scale(1.05);
  }

  /* 移动端和PC端图片显示控制 */
  .home-gallery-card .mobile-img {
    display: none;
  }

  .home-gallery-card .pc-img {
    display: block;
  }

  @media (max-width: 900px) {
    .home-gallery-card {
      width: 42.667vw;
      height: 30.4vw;
      border-radius: 2.133vw;
    }
    
    /* 移动端图片显示，PC端图片隐藏 */
    .home-gallery-card .mobile-img {
      display: block;
    }
    
    .home-gallery-card .pc-img {
      display: none;
    }
  }

  @media (min-width: 1920px) {
    .home-gallery-card {
      width: 16.667vw;
      height: 11.927vw;
      border-radius: 0.833vw;
    }
  }
{% endstyle %}

<a
  class="home-gallery-card"
  {% if block.settings.link %}
    href="{{ block.settings.link }}"
  {% else %}
    data-fancybox="gallery"
    data-src="{{ block.settings.image | img_url: 'master' }}"
  {% endif %}
>
  {% if block.settings.image != blank %}
    <!-- PC端图片 -->
    <img 
      class="pc-img"
      src="{{ block.settings.image | img_url: 'master' }}" 
      width="100%" 
      height="100%" 
      alt="{{ block.settings.title | default: 'Gallery Image' }}"
    >
  {% endif %}
  
  {% if block.settings.mobile_image != blank %}
    <!-- 移动端图片 -->
    <img 
      class="mobile-img"
      src="{{ block.settings.mobile_image | img_url: 'master' }}" 
      width="100%" 
      height="100%" 
      alt="{{ block.settings.title | default: 'Gallery Image' }}"
    >
  {% endif %}
  
  {% if block.settings.image == blank and block.settings.mobile_image == blank %}
    <!-- 占位符图片 -->
    <img 
      class="pc-img"
      src="{{ 'image' | placeholder_svg_tag }}" 
      width="100%" 
      height="100%" 
      alt="Placeholder Image"
    >
  {% endif %}
</a>

{% schema %}
{
  "name": "Home Gallery Card",
  "class": "home-gallery-card-block",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "PC端图片"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "移动端图片"
    },
    {
      "type": "text",
      "id": "title",
      "label": "图片标题",
      "default": "Gallery Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link (optional) ",
      "info": "不设置link，则点击会弹窗展示图片"
    }
  ],
  "presets": [
    {
      "name": "Home Gallery Card 作品卡片"
    }
  ]
}
{% endschema %}
