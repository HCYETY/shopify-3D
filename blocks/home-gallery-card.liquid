{% style %}
  .home-gallery-card {
    width: 320px;
    height: 229px;
    border-radius: 16px;
    overflow: hidden;
    display: block;
  }
  .home-gallery-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease-in-out;
  }
  .home-gallery-card:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 900px) {
    .home-gallery-card {
      width: 42.667vw;
      height: 30.4vw;
      border-radius: 2.133vw;
    }
  }

  @media (min-width: 1920px) {
    .home-gallery-card {
      width: 16.667vw;
      height: 11.927vw;
      border-radius: 0.833vw;
    }
  }
{% endstyle %}

<a
  class="home-gallery-card"
  {% if block.settings.link %}
    href="{{ block.settings.link }}"
  {% else %}
    data-fancybox="gallery"
    data-src="{{ block.settings.image | img_url: 'master' }}"
  {% endif %}
>
  <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%" alt="">
</a>

{% schema %}
{
  "name": "Home Gallery Card",
  "class": "home-gallery-card-block",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link (optional) ",
      "info": "不设置link，则点击会弹窗展示图片"
    }
  ],
  "presets": [
    {
      "name": "Home Gallery Card 作品卡片"
    }
  ]
}
{% endschema %}
